{
  "name": "jeremy",
  "version": "2.0.0",
  "description": "Whimsical WordPress business directory theme.",
  "license": "GPL-3.0-or-later",
  "author": "Presto Bunny",
  "keywords": [
    "WordPress",
    "Theme",
    "Jeremy"
  ],
  "homepage": "https://presto.blog",
  "devDependencies": {
    "@wordpress/eslint-plugin": "^7.1.0",
    "@wordpress/prettier-config": "^0.3.0",
    "autoprefixer": "^7.1.2",
    "browser-sync": "^2.0.0",
    "eslint": "^7.8.1",
    "gulp": "^4.0.2",
    "gulp-postcss": "^7.0.0",
    "gulp-readme-to-markdown": "^1.0.1",
    "gulp-rename": "^1.4.0",
    "gulp-rtlcss": "1.0.0",
    "gulp-sass": "^3.1.0",
    "gulp-uglify": "^2.0.0",
    "gulp-wait": "0.0.2",
    "jshint": "^2.10.2",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-wordpress": "^13.1.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@wordpress/eslint-plugin/es5"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "jquery": true
    },
    "globals": {
      "index": true,
      "responsiveNav": true,
      "ResponsiveNav": true,
      "addEvent": true,
      "removeEvent": true,
      "addClass": true,
      "removeClass": true,
      "setAttributes": true,
      "getChildren": true,
      "forEach": true,
      "options": true,
      "opts": true,
      "nav": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-wordpress/scss",
    "rules": {
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "first-nested"
          ]
        }
      ],
      "color-named": null,
      "font-family-no-missing-generic-family-keyword": null,
      "function-url-quotes": null,
      "no-descending-specificity": null,
      "no-duplicate-selectors": null,
      "rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "first-nested"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "gulp-readme-to-markdown": "^0.2.1",
    "npm": "^6.14.8"
  }
}
